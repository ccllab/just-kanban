{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}